<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context=".MainActivity"
    android:layout_height="match_parent"
     android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:textSize="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="4"
            android:columnCount="2"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
            android:columnOrderPreserved="false">


            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="200dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                android:layout_marginLeft="2dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:gravity="center|top|bottom">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_marginTop="2dp"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        app:srcCompat="@drawable/businessstudy" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Price: 600/-"
                        android:textSize="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="2dp"
                        />

                    <Button
                        android:id="@+id/btn1"
                        android:layout_width="52dp"
                        android:layout_height="31dp"
                        android:layout_marginTop="1dp"
                        android:text="Add to cart"
                        android:textSize="5dp"
                        android:background="@color/white"
                        android:textColor="@color/purple_200">

                    </Button>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="200dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                android:layout_marginLeft="2dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:gravity="center|top|bottom">

                    <ImageView
                        android:id="@+id/calculus"
                        android:layout_marginTop="2dp"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        app:srcCompat="@drawable/calculus" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Price: 590/-"
                        android:textSize="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="2dp"
                        />

                    <Button
                        android:id="@+id/btn2"
                        android:layout_width="52dp"
                        android:layout_height="31dp"
                        android:layout_marginTop="1dp"
                        android:text="Add to cart"
                        android:textSize="5dp"
                        android:background="@color/white"
                        android:textColor="@color/purple_200">

                    </Button>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="200dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                android:layout_marginLeft="2dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:gravity="center|top|bottom">

                    <ImageView
                        android:id="@+id/commerce"
                        android:layout_marginTop="2dp"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        app:srcCompat="@drawable/commerce" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Price: 650/-"
                        android:textSize="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="2dp"
                        />

                    <Button
                        android:id="@+id/btn3"
                        android:layout_width="52dp"
                        android:layout_height="31dp"
                        android:layout_marginTop="1dp"
                        android:text="Add to cart"
                        android:textSize="5dp"
                        android:background="@color/white"
                        android:textColor="@color/purple_200">

                    </Button>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="200dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                android:layout_marginLeft="2dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:gravity="center|top|bottom">

                    <ImageView
                        android:id="@+id/dsa"
                        android:layout_marginTop="2dp"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        app:srcCompat="@drawable/dsa" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Price: 599/-"
                        android:textSize="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="2dp"
                        />

                    <Button
                        android:id="@+id/btn4"
                        android:layout_width="52dp"
                        android:layout_height="31dp"
                        android:layout_marginTop="1dp"
                        android:text="Add to cart"
                        android:textSize="5dp"
                        android:background="@color/white"
                        android:textColor="@color/purple_200">

                    </Button>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="200dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                android:layout_marginLeft="2dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:gravity="center|top|bottom">

                    <ImageView
                        android:id="@+id/mechanical"
                        android:layout_marginTop="2dp"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        app:srcCompat="@drawable/mechanical" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Price: 600/-"
                        android:textSize="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="2dp"
                        />

                    <Button
                        android:id="@+id/btn5"
                        android:layout_width="52dp"
                        android:layout_height="31dp"
                        android:layout_marginTop="1dp"
                        android:text="Add to cart"
                        android:textSize="5dp"
                        android:background="@color/white"
                        android:textColor="@color/purple_200">

                    </Button>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="200dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                android:layout_marginLeft="2dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:gravity="center|top|bottom">

                    <ImageView
                        android:id="@+id/nursing"
                        android:layout_marginTop="2dp"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        app:srcCompat="@drawable/nursing" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Price: 600/-"
                        android:textSize="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="2dp"
                        />

                    <Button
                        android:id="@+id/btn6"
                        android:layout_width="52dp"
                        android:layout_height="31dp"
                        android:layout_marginTop="1dp"
                        android:text="Add to cart"
                        android:textSize="5dp"
                        android:background="@color/white"
                        android:textColor="@color/purple_200">

                    </Button>
                </LinearLayout>

            </androidx.cardview.widget.CardView>




        </GridLayout>
    </LinearLayout>



</ScrollView>